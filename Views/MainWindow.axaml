<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="belonging.Views.MainWindow"
        Title="Пример Avalonia"
        Width="400" Height="400">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Canvas Name="DrawingCanvas" Grid.Column="0" Background="LightGray" PointerPressed="OnCanvasClick" />

        <StackPanel Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10">
            <Button Content="Нарисовать квадрат" Click="OnDrawSquareClick" Margin="5"/>
            <Button Content="Нарисовать пятиугольник" Click="OnDrawPentagonClick" Margin="5"/>
            <Button Content="Нарисовать шестиугольник" Click="OnDrawHexagonClick" Margin="5"/>
        </StackPanel>
    </Grid>

</Window>